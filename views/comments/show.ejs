<li class="media border-top border-bottom my-2 py-2 bg-light">
    <img src="https://cdn1.iconfinder.com/data/icons/user-pictures/100/unknown-64.png" alt="" class="align-self-start mr-3">
    <div class="media-body">
        <h5 class="mt-3 mb-1 d-inline">
            <%= comment.author.username %>
        </h5>
        <span class="float-right">10 days ago</span>
        <p><%= comment.text %></p>
        <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
            <button class="toggleEditCommentBox btn btn-warning btn-sm"><i class="far fa-edit"></i></button>
            <form class="d-inline" action="/campgrounds/<%= campground._id %>/reviews/<%= comment._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger btn-sm float-right"><i class="fas fa-trash"></i></button>
            </form>
            <%- include('edit', { comment }) %>
            <% } %>
        </div>
</li>