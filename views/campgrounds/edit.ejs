<%- include('../partials/header') %>

<div class="container">
    <h1>Edit <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="font-weight-bold" for="name">Campground name</label>
            <input type="text" class="form-control" name="campground[name]" id="name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="image">Image URL</label>
            <input type="text" class="form-control" name="campground[image]" id="image" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="description">Description</label>
            <textarea class="form-control" id="description" name="campground[description]">
                <%= campground.description %>
            </textarea>
        </div>

        <button class="btn btn-primary">Save Changes</button>
    </form>
</div>

<%- include('../partials/footer') %>