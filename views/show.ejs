<%- include('partials/header') %>
<div class="container">
    <div class="row">
        <aside class="col-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
            </ul>
        </aside>
        <main class="col-9">
            <article class="card">
                <img src="<%= campground.image %>" alt="<%= campground.name %>">
                <div class="card-body">
                        <h1 class="card-title"><a href=""><%= campground.name %></a> <span class="float-right">$9.99/night</span></h1>
                        <p class="card-text"><%= campground.description || 'No description provided!' %></p>
                    <div class="container">
                        <h3>Reviews</h3>
                        <ul class="list-unstyled">
                            <% for (let comment of campground.comments) { %>
                                <li class="media border-top border-bottom my-2 bg-light">
                                    <img src="https://cdn1.iconfinder.com/data/icons/user-pictures/100/unknown-64.png" alt="" class="mt-2 mr-3">
                                    <div class="media-body">
                                        <h5 class="mt-3 mb-1 d-inline order-1">
                                            <%= comment.author %>
                                        </h5>
                                        <span class="float-right">10 days ago</span>
                                        <p><%= comment.text %></p>
                                        <button class="btn btn-danger btn-sm float-right">Delete Comment</button>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                    <hr>
                    <div class="container mt-3">
                        <h4 class="text-center">Leave a review</h4>
                        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                            <div class="form-group">
                                <textarea class="form-control" name="comment[text]" placeholder="Add comment..."></textarea>
                            </div>
                            <div class="form-group">
                                <label for="author">Your Name</label>
                                <input type="text" class="form-control" id="author" name="comment[author]" placeholder="Your name...">
                            </div>
                            <button type="submit" class="btn btn-primary">Add Review</button>
                            </form>
                    </div>
                </div>

            </article>
        </main>
    </div>
</div>

<%- include('partials/footer') %>